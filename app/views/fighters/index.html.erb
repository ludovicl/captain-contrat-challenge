<p id="notice"><%= notice %></p>

<h1>Combattants</h1>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Nom</th>
      <th>Nombre de points de vie</th>
      <th>Force d'attaque</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fighters.each do |fighter| %>
      <tr>
        <td><%= image_tag fighter.avatar, width: "100" %> </td>
        <td><%= fighter.name %></td>
        <td><%= fighter.health_points %></td>
        <td><%= fighter.attack_strength %></td>
        <td>
          <span class="badge badge-success">Victoires <span class="badge"><%= fighter.number_wins %></span></span>
          <br>
          <span class="badge badge-danger">DÃ©faites <span class="badge"><%= fighter.number_looses %></span></span>
        </td>
        <td><%= link_to 'Editer', edit_fighter_path(fighter), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Supprimer', fighter, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
